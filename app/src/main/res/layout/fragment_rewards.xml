<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_a400"
    android:padding="16dp"
    app:layout_behavior="@string/reward"
    android:gravity="center"
    tools:context=".Rewards.RewardsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/totalCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Total Points: " />

    <ImageView
        android:id="@+id/reward_store"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_store_white" />

    <ImageView
        android:id="@+id/imageWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:rotation="67"
        android:scaleType="center"
        android:src="@drawable/wheel" />

    <ImageView
        android:onClick="spinWheel"
        android:id="@+id/powerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:scaleType="center"
        android:src="@drawable/spin_button" />

    <ImageView
        android:id="@+id/imagePointer"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:layout_above="@+id/powerButton"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_pointer" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageWheel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:text="Press Yellow Button!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|normal" />

</RelativeLayout>